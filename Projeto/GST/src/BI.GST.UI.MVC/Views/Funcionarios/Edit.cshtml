@model BI.GST.Application.ViewModels.FuncionarioViewModel

@{
    ViewBag.Title = "GST | Editar funcionario";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script src="~/js/mask/maskInput.js" type="text/javascript"></script>

<h2>Editar funcionário</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dados Pessoais</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FuncionarioId)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-7">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.RG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RG, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-xs-12 col-md-3">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PIS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.PIS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PIS, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.CLT, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-xs-12 col-md-3">
                @Html.EditorFor(model => model.CLT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CLT, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Serie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Status do Funcionário", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.DropDownList("Status", (IEnumerable<SelectListItem>)TempData["ddlStatus_Funcionarios"], new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <h4>Dados Profissionais</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.EmpresaId, "Empresa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.DropDownList("EmpresaId", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmpresaId, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.CBOId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.DropDownList("CBOId", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CBOId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Admissao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.Admissao, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Admissao, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Responsavel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-1">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.Responsavel, new { @class = "col-sm-4 control-label" })
                    @Html.ValidationMessageFor(model => model.Responsavel, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.LabelFor(model => model.EscalaId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-xs-12 col-md-2">
                @Html.DropDownList("EscalaId", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EscalaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoraEntrada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.HoraEntrada, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoraEntrada, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.HoraSaida, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.HoraSaida, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoraSaida, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.SetorId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.DropDownList("SetorId", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SetorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para lista", "Index")
</div>

@Html.Partial("_Mensagem")

<script>
    jQuery(function ($) {
        $("#CPF").mask("999.999.999-99");
        $("#PIS").mask("999.99999.99-9");
        $("#Serie").mask("999-9");
        $("#CLT").mask("999999?9");
    });
</script>


