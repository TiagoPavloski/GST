@model BI.GST.Application.ViewModels.CBOViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Função</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CBOId)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-5">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodigoCBO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-2">
                @Html.EditorFor(model => model.CodigoCBO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodigoCBO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-6">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Riscos da Função", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-5">
                @Html.ListBox("RiscoCBOId", (MultiSelectList)ViewBag.RiscoCBOId, htmlAttributes: new { @class = "form-control", size = "6" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cursos obrigatórios da Função", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-5">
                @Html.ListBox("TipoCursoId", (MultiSelectList)ViewBag.TipoCursoId, htmlAttributes: new { @class = "form-control", size = "6" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Exames obrigatórios da Função", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-5">
                @Html.ListBox("TipoExameId", (MultiSelectList)ViewBag.TipoExameId, htmlAttributes: new { @class = "form-control", size = "6" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Vacinas obrigatórias da Função", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-5">
                @Html.ListBox("TipoVacinaId", (MultiSelectList)ViewBag.TipoVacinaId, htmlAttributes: new { @class = "form-control", size = "6" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para lista", "Index")
</div>

@Html.Partial("_Mensagem")