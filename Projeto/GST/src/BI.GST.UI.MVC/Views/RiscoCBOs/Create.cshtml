        <h4>Risco de função</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("AgenteRiscoCBO", "Agente do risco", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.DropDownList("AgenteRiscoCBOId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AgenteRiscoCBOId, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AgenteCausadorCBOId, "Agente Causador do Risco", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.DropDownList("AgenteCausadorCBOId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AgenteCausadorCBOId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FonteRiscoCBOId, "Fonte do Risco", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-4">
                @Html.DropDownList("FonteRiscoCBOId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FonteRiscoCBOId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Consequencias, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-10">
                @Html.TextAreaFor(model => model.Consequencias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Consequencias, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MedidasPreventivas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-xs-12 col-md-10">
                @Html.TextAreaFor(model => model.MedidasPreventivas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MedidasPreventivas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para lista", "Index")
</div>

@Html.Partial("_Mensagem")
