@model BI.GST.Application.ViewModels.EmpresaViewModel

@{
	ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
	<h4>Empresa</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.NomeFantasia)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.NomeFantasia)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.RazaoSocial)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.RazaoSocial)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.CNPJ)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CNPJ)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Email)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt>
			@Html.DisplayName("Cnae Principal")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CnaePrincipal.Descricao)
		</dd>


		<dt>
			@Html.DisplayName("Cnae Secundarios")
		</dt>
		@foreach (var item in Model.CnaeSecundarios)
		{
			<dd>
				@Html.DisplayFor(model => item.Descricao)
			</dd>
		}

		<dt>
			@Html.DisplayName("Setores")
		</dt>
		@foreach (var item in Model.Setores)
		{
			<dd>
				@Html.DisplayFor(model => item.Nome)
			</dd>
		}

		<dt>
			@Html.DisplayName("Telefones")
		</dt>
		@foreach (var item in Model.Telefones)
		{
			<dd>
				@Html.DisplayFor(model => item.Numero)
			</dd>
		}

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.CEP)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.CEP)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Logradouro)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Logradouro)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Numero)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Numero)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Bairro)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Bairro)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Cidade)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Cidade)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Pais)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Pais)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.UF.Nome)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.UF.Nome)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Endereco.Complemento)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Endereco.Complemento)
		</dd>

		@if (Model.Files.Any(model => model.FileType == BI.GST.Application.ViewModels.FileTypeViewModel.Avatar))
		{
			<dt>
				@Html.DisplayName("Logo")
			</dt>
			<dd>
				<img src="~/File?id=@Model.Files.First(model => model.FileType == BI.GST.Application.ViewModels.FileTypeViewModel.Avatar).FileId" alt="avatar" width="200" />
			</dd>
		}
	</dl>
</div>
<p>
	@Html.ActionLink("Editar", "Edit", new { id = Model.EmpresaId }) |
	@Html.ActionLink("Voltar para Lista", "Index")
</p>
