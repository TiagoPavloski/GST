@model BI.GST.Application.ViewModels.OSViewModel

@{
	Layout = null;
}

<style>
	body{
		font-family: Calibri;
		color: #423a2f;
	}

	table, th, td {
		border: 2px solid black;
		border-collapse: collapse;
	}

	th, td {
		padding: 5px;
		text-align: left;
	}

	.tablethtd {
		border: 4px solid white;
		border-collapse: collapse;
	}

	.titulo {
		/*color: #928888;*/
		text-align: center;
	}

	.center {
		text-align: center;
	}
</style>

<div id="HTMLtoPDF">


	<h1 class="titulo">ORDEM DE SERVIÇO</h1>

	<div>
		<table style="width:100%">
			<tr>
				<th colspan="5" class="center">DADOS GERAIS DA O.S</th>
			</tr>
			<tr>
				<td colspan="3">Nome Completo: @Html.DisplayFor(model => model.Funcionario.Nome)</td>

				<td colspan="2">CPF: @Html.DisplayFor(model => model.Funcionario.CPF)</td>
			</tr>
			<tr>
				<td colspan="3">Função: @Html.DisplayFor(model => model.Funcionario.CBO.Nome)</td>

				<td colspan="2">CBO: @Html.DisplayFor(model => model.Funcionario.CBO.CodigoCBO)</td>
			</tr>
			<tr>
				<td colspan="3">Data Elaboração: @Html.DisplayFor(model => model.DataElaboracao)</td>

				<td colspan="2">Próxima Revisão: @Html.DisplayFor(model => model.DataRevisao)</td>
			</tr>
			<tr>
				<td colspan="5">Descrição da Função: @Html.DisplayFor(model => model.Funcionario.CBO.Descricao)</td>

			</tr>
			<tr>
				<th colspan="5" class="center">RISCOS AMBIENTAIS ENCONTRADOS</th>
			</tr>
			<tr>
				<td>
					FISICO @foreach (var item in Model.Funcionario.Setor.AgenteFisicos)
					{
						@Html.DisplayFor(model => item.Nome)
					}
				</td>

				<td>
					QUIMICO @foreach (var item in Model.Funcionario.Setor.AgenteQuimicos)
					{
						@Html.DisplayFor(model => item.Nome)
					}
				</td>
				<td>
					BIOLOGICO @foreach (var item in Model.Funcionario.Setor.AgenteBiologicos)
					{
						@Html.DisplayFor(model => item.Nome)
					}
				</td>
				<td>
					ERGONIMICO @foreach (var item in Model.Funcionario.Setor.AgenteErgonomicos)
					{
						@Html.DisplayFor(model => item.Nome)
					}
				</td>
				<td>
					ACIDENTE @foreach (var item in Model.Funcionario.Setor.AgenteAcidentes)
					{
						@Html.DisplayFor(model => item.Nome)
					}
				</td>
			</tr>
			<tr>
				<th colspan="5" class="center">RISCOS AMBIENTAIS ENCONTRADOS</th>
			</tr>
			<tr>
				<td colspan="5">@Html.DisplayFor(model => model.EPIRecomendado)</td>
			</tr>
			<tr>
				<th colspan="5" class="center">RECOMENDAÇÕES TÉCNICA | MEDIDAS PREVENTIVAS</th>
			</tr>
			<tr>
				<td colspan="5">@Html.DisplayFor(model => model.Recomentacoes)</td>
			</tr>
			<tr>
				<th colspan="3" class="center">ASSINATURA DO COLABORADOR</th>

				<th colspan="2" class="center">DATA</th>
			</tr>
			<tr>
				<td colspan="3" class="center"><br /><br /></td>

				<td colspan="2" class="center"><br /><br /></td>
			</tr>
			<tr>
				<th colspan="5" class="center">REPRESENTANTES DA EMPRESA</th>
			</tr>
			<tr>
				<td colspan="3" class="center">TÉCNICO DE SEGURANÇA</td>

				<td colspan="2" class="center">RESPONSÁVEL</td>
			</tr>
			<tr>
				<td colspan="3" class="center"><br /><br /></td>

				<td colspan="2" class="center"><br /><br /></td>
			</tr>
		</table>
	</div>
</div>

