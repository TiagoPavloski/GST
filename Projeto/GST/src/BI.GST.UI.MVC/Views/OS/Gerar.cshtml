@model BI.GST.Application.ViewModels.OSViewModel

@{
    Layout = null;
}
<html>
<head id="Head1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>
        Impressão de certificado
    </title>
    <style type="text/css" media="print">
    </style>

    <style type="text/css" media="all">
        .SlideBackGround {
            height: 100%;
            width: 100%;
            position: fixed;
            margin: 0px 0px 0px 0px;
            background-color: white;
            background-image: url(http://bridgeit.com.br/img/fundo-ppra.png);
            background-size: 100%;
            background-repeat: no-repeat;
            z-index: 2;
            filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='http://bridgeit.com.br/img/fundo-ppra.png',sizingMethod='scale');
            -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='frame.png',sizingMethod='scale')";
        }

        body {
            font-family: Calibri;
            color: #423a2f;
		background-image: url('http://bridgeit.com.br/img/logoVerdeOs2.jpg');
		border: solid 2px;
		background-size: 100%;
		background-repeat: no-repeat;
        }

        table, th, td {
            border: 2px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }

        .tablethtd {
            border: 4px solid white;
            border-collapse: collapse;
        }

        .titulo {
            /*color: #928888;*/
            text-align: center;
            margin-top: 100px;
        }

        .center {
            text-align: center;
        }

        .corpo {
            padding: 50px;
            position: absolute;
        }

        .titulos {
            text-align: center;
            font-size: 20px;
            color: #000000;
        }
    </style>
</head>
<body>
    <div class="SlideBackGround">

        <div id="HTMLtoPDF" class="corpo">
            <h1 class="titulo">ORDEM DE SERVIÇO</h1>

            <div>
                <table style="width:100%">
                    <tr>
                        <th colspan="5" class="center">DADOS GERAIS DA O.S</th>
                    </tr>
                    <tr>
                        <td colspan="3">Nome Completo: @Html.DisplayFor(model => model.Funcionario.Nome)</td>

                        <td colspan="2">CPF: @Html.DisplayFor(model => model.Funcionario.CPF)</td>
                    </tr>
                    <tr>
                        <td colspan="3">Função: @Html.DisplayFor(model => model.Funcionario.CBO.Nome)</td>

                        <td colspan="2">CBO: @Html.DisplayFor(model => model.Funcionario.CBO.CodigoCBO)</td>
                    </tr>
                    <tr>
                        <td colspan="3">Data Elaboração: @Html.DisplayFor(model => model.DataElaboracao)</td>

                        <td colspan="2">Próxima Revisão: @Html.DisplayFor(model => model.DataRevisao)</td>
                    </tr>
                    <tr>
                        <td colspan="5">Descrição da Função: @Html.DisplayFor(model => model.Funcionario.CBO.Descricao)</td>

                    </tr>
                    <tr>
                        <th colspan="5" class="center">RISCOS AMBIENTAIS ENCONTRADOS</th>
                    </tr>
                    <tr>
                        <td class="titulos" bgcolor="#00771d">Fisico</td>
                        <td class="titulos" bgcolor="#bc0101" ;>Quimico</td>
                        <td class="titulos" bgcolor="#7f3a3a" ;>Biológico</td>
                        <td class="titulos" bgcolor="#e8d129" ;>Ergonomico</td>
                        <td class="titulos" bgcolor="#3845ff" ;>Acidente</td>
                    </tr>
                    <tr>
                        <td>
                            @foreach (var item in Model.Funcionario.Setor.AgenteFisicos)
                            {
                                @Html.DisplayFor(model => item.Nome)
                            }
                        </td>

                        <td>
                            @foreach (var item in Model.Funcionario.Setor.AgenteQuimicos)
                            {
                                @Html.DisplayFor(model => item.Nome)
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.Funcionario.Setor.AgenteBiologicos)
                            {
                                @Html.DisplayFor(model => item.Nome)
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.Funcionario.Setor.AgenteErgonomicos)
                            {
                                @Html.DisplayFor(model => item.Nome)
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.Funcionario.Setor.AgenteAcidentes)
                            {
                                @Html.DisplayFor(model => item.Nome)
                            }
                        </td>
                    </tr>
                    <tr>
                        <th colspan="5" class="center">RISCOS AMBIENTAIS ENCONTRADOS</th>
                    </tr>
                    <tr>
                        <td colspan="5">@Html.DisplayFor(model => model.EPIRecomendado)</td>
                    </tr>
                    <tr>
                        <th colspan="5" class="center">RECOMENDAÇÕES TÉCNICA | MEDIDAS PREVENTIVAS</th>
                    </tr>
                    <tr>
                        <td colspan="5">@Html.DisplayFor(model => model.Recomentacoes)</td>
                    </tr>
                    <tr>
                        <th colspan="3" class="center">ASSINATURA DO COLABORADOR</th>

                        <th colspan="2" class="center">DATA</th>
                    </tr>
                    <tr>
                        <td colspan="3" class="center"><br /><br /></td>

                        <td colspan="2" class="center"><br /><br /></td>
                    </tr>
                    <tr>
                        <th colspan="5" class="center">REPRESENTANTES DA EMPRESA</th>
                    </tr>
                    <tr>
                        <td colspan="3" class="center">TÉCNICO DE SEGURANÇA</td>

                        <td colspan="2" class="center">RESPONSÁVEL</td>
                    </tr>
                    <tr>
                        <td colspan="3" class="center"><br /><br /></td>

                        <td colspan="2" class="center"><br /><br /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
