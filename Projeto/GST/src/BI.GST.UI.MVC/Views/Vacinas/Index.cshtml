@model IEnumerable<BI.GST.Application.ViewModels.VacinaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>

@using (Html.BeginForm("Index", "Vacinas", new { pesquisa = "" }, FormMethod.Get))
{
    <p>
      Pesquisar Por nome: @Html.Editor("pesquisa") <input type="submit" value="Pesquisar" class="btn btn-default" />
    </p>
}

<table class="table">
    <tr>
      <th>
        @Html.DisplayName("Funcionario")
      </th>
      <th>
        @Html.DisplayName("Tipo Vacina")
      </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoVacina.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.VacinaId }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.VacinaId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.VacinaId })
        </td>
    </tr>
}

</table>

@Html.Partial("_Paginacao")
@Html.Partial("_Mensagem")
